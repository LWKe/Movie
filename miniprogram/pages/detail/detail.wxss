/* miniprogram/pages/detail/detail.wxss */
.top {
  width: 100%;
  background-color: #663E2E;
  padding-bottom: 40rpx;
}

.top-con {
  display: flex;
  padding: 20rpx;
}

.top-con image {
  width: 230rpx;
  height: 320rpx;
}

.top-con-r {
  margin-left: 15rpx;
}

.fz {
  color: white;
  font-size: 43rpx;
  font-weight: 700;
}

.top-con-r text {
  display: block;
  font-size: 27rpx;
  color: rgb(156, 156, 156);
  margin-top: 8rpx;
  font-weight: 400;
  line-height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* 想看，不想看 */
.btn {
  display: flex;
  margin-top: 15rpx;
}

/* 左侧 */
.btn-l {
  display: flex;
  width: 230rpx;
  height: 65rpx;
  border-radius: 13rpx;
  background-color: rgba(255, 255, 255, 0.35);
}

.btn-l-f {
  display: flex;
  width: 230rpx;
  height: 65rpx;
  border-radius: 13rpx;
  background-color: rgba(255, 255, 255, 0.15);
}

.btn-l image {
  width: 40rpx;
  height: 40rpx;
}

.btn-l-c {
  display: flex;
  margin-top: 12rpx;
  margin-left: 50rpx;
}

.btn-l-c-fz {
  color: white;
  font-size: 30rpx;
  margin-left: 18rpx;
}

.btn-l-c-fz-f {
  color: rgb(158, 133, 122);
  font-size: 30rpx;
  margin-left: 20rpx;
}

/* 右侧 */
.btn-r {
  width: 230rpx;
  height: 65rpx;
  border-radius: 13rpx;
  margin-left: 20rpx;
  background-color: rgba(255, 255, 255, 0.35);
}

.btn-r image {
  width: 40rpx;
  height: 40rpx;
}

.btn-r-c {
  display: flex;
  margin-top: 12rpx;
  margin-left: 50rpx;
}

.btn-r-c-fz {
  color: white;
  font-size: 30rpx;
  margin-left: 18rpx;
}

/* 简介 */
.synopsis {
  display: flex;
  margin-left: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}

.synopsis-top {
  color: white;
  font-size: 31rpx;
}

.synopsis-top-r {
  display: flex;
  font-size: 27rpx;
  color: rgb(167, 164, 164);
  font-weight: 600;
  margin-left: 78%;
}

.synopsis-top-r-img {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(90deg);
  margin-top: 10rpx;
  margin-left: 5rpx;
}

.synopsis-top-r-img-u {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(-90deg);
  margin-top: 10rpx;
  margin-left: 5rpx;
}

/* 简介内容 */
.details {
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 31rpx;
  color: white;
  margin-top: 10rpx;
  line-height: 50rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.detail {
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 31rpx;
  color: white;
  margin-top: 10rpx;
  line-height: 50rpx;
}

/* 演职人员 */
.actor {
  display: flex;
  margin-left: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}

.actor-top {
  color: white;
  font-size: 31rpx;
}

.actor-img {
  width: 20rpx;
  height: 20rpx;
  margin-top: 10rpx;
  margin-left: 5rpx;
}

.actor-top-r {
  display: flex;
  font-size: 27rpx;
  color: rgb(167, 164, 164);
  font-weight: 600;
  margin-left: 70%;
}

/* 演员列表 */
.actor-list {
  /* margin-left: 20rpx; */
  margin-right: 20rpx;
}

.actor-view_H {
  white-space: nowrap;
}

.actor-view-item_H {
  position: relative;
  display: inline-block;
  width: 165rpx;
  /* height: 280rpx; */
  margin-left: 20rpx;
}

.spn {
  display: inline-block;
}

.list-img {
  width: 100%;
  height: 228rpx;
  z-index: 9;
}

.actor-name {
  font-size: 26rpx;
  color: white;
  text-align: center;
}

.actor-act {
  color: rgb(167, 164, 164);
  text-align: center;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 视频列表 */
.video {
  position: relative;
  display: flex;
  margin-left: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}

.video-top {
  color: white;
  font-size: 31rpx;
}

.video-top-r {
  position: absolute;
  display: flex;
  font-size: 27rpx;
  color: rgb(167, 164, 164);
  font-weight: 600;
  right: 20rpx;
}

.video-list {
  margin-right: 20rpx;
}

.video-view_H {
  white-space: nowrap;
}

.video-view-item_H {
  position: relative;
  display: inline-block;
  width: 705rpx;
  margin-left: 20rpx;
}

.video-c {
  width: 100%;
  height: 397rpx;
}

/* 剧照列表 */
.still-view-item_H {
  position: relative;
  display: inline-block;
  width: 320rpx;
  margin-left: 20rpx;
}

.still-c {
  width: 100%;
  height: 200rpx;
}

/* 评论 */
.comment {
  background-color: white;
  border-radius: 15rpx;
  margin-top: -10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 110rpx;
}

.tip {
  line-height: 100rpx;
  font-size: 35rpx;
}

.person {
  display: flex;
  margin-bottom: 20rpx;
}

.person-i {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.person-i image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 评论内容 */
.person-con {
  margin-left: 20rpx;
  width: 86%;
  padding-bottom: 20rpx;
  border-bottom: rgba(223, 223, 223,0.7) 1rpx solid;
}
.person-con-top {
  display: flex;
  width: 100%;
  position: relative;
}
.person-con-n {
  font-size: 30rpx;
}
.person-con-n-img {
  width: 65rpx;
  height: 33rpx;
  margin-top: 6rpx;
  margin-left: 10rpx;
  z-index: 4;
}
.praise{
  position: absolute;
  width: 140rpx;
  height: 55rpx;
  border: rgb(167, 164, 164) 1rpx solid;
  border-radius: 27rpx;
  right: 0; 
}
.praise-i{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin: 10rpx 15rpx 0 10rpx;
}
.praise view{
  display: inline-block;
  font-size: 30rpx;
  height: 55rpx;
  color: rgb(167, 164, 164);
  line-height: 55rpx;
}
/* 评论显示多少 */
.person-content{
  margin-top: 30rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 7;
}
.person-content-f{
  margin-top: 30rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #333;
}
/* 日期和回复 */
.person-btm{
  display: flex;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.reply{
  width: 120rpx;
  height: 40rpx;
  border-radius: 20rpx;
  color: #5a7cab;
  font-size: 25rpx;
  line-height: 40rpx;
  text-align: center;
  margin-left: 20rpx;
  background-color: rgb(221, 232, 252);
}

.logo{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  letter-spacing: 20rpx;
  color: rgb(212, 211, 211);
}

/* 底部固定 */
.bottom{
  display: flex;
  width: 100%;
  height: 130rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  z-index: 10;
}
.bottom image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
}
.buy{
  width: 77%;
  height: 90rpx;
  background: linear-gradient(92deg,#ffba40 0,#ff503e 37%,#ff2f50 81%,#ff1b40 100%);
  margin-top: 20rpx;
  border-radius: 45rpx;
  margin-left: 66rpx;
  color: white;
  text-align: center;
  line-height: 90rpx;
  box-shadow: 0 0.06rpx 0.12rpx 0 rgba(251,51,51,.3);
}