/* 搜索部分 */
.input {
  display: flex;
  flex-direction: row;
  height: 75rpx;
  width: 90%;
  border-radius: 50rpx;
  background-color: #e6e6e6;
  margin-left: 5%;
  margin-top: 30rpx;
}

.input icon {
  margin: auto 20rpx;
}
.placehold {
  width: 90%;
  height: 75rpx;
  font-size: 14px;
  color: rgb(0, 0, 0);
  background-color: #e6e6e6;
  border-radius: 50rpx;
  margin: auto 0 auto 40rpx;
}
